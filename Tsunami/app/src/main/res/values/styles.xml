<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TsunamiActionBar</item>
        <item name="android:windowBackground">@color/fbutton_color_clouds</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textViewStyle">@style/TextView.Tsunami</item>
        <item name="android:scrollViewStyle">@style/ScrollView.Tsunami</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TransparentAppTheme" parent="AppTheme">

    </style>

    <style name="TsunamiActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_protector</item>
        <item name="android:height">@dimen/action_bar_height</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="TextView.Tsunami" parent="android:Widget.TextView"></style>

    <style name="ScrollView.Tsunami" parent="android:Widget.ScrollView">
        <item name="android:overScrollMode">never</item>
    </style>

</resources>
