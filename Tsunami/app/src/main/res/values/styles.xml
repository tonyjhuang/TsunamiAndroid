<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorControlNormal">@color/divider</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/primary_light</item>

        <item name="android:windowBackground">@color/fbutton_color_clouds</item>
        <item name="android:textViewStyle">@style/TextView.Tsunami</item>
        <item name="android:scrollViewStyle">@style/ScrollView.Tsunami</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme.NoActionBar">
    </style>

    <style name="TextView.Tsunami" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:padding">@dimen/default_text_padding</item>
    </style>

    <style name="ScrollView.Tsunami" parent="android:Widget.ScrollView">
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="ContentTitle">
        <item name="typeface">Roboto-Light</item>
        <item name="android:textSize">@dimen/content_title_textsize</item>
    </style>

    <style name="CardDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/content_divider_height</item>
        <item name="android:layout_marginBottom">@dimen/content_divider_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/content_divider_margin_vertical</item>
        <item name="android:layout_marginLeft">@dimen/content_divider_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/content_divider_margin_horizontal</item>
        <item name="android:background">@color/content_view_card_divider</item>
    </style>

</resources>
