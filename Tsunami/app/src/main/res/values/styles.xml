<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorControlNormal">@color/divider</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>

        <item name="android:windowBackground">@color/fbutton_color_clouds</item>
        <item name="android:textViewStyle">@style/TextView.Tsunami</item>
        <!--<item name="android:editTextStyle">@style/EditText.Tsunami</item>-->
        <item name="android:scrollViewStyle">@style/ScrollView.Tsunami</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme.NoActionBar"></style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="TextView.Tsunami" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="ScrollView.Tsunami" parent="android:Widget.ScrollView">
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="WaveContentTitle">
        <item name="typeface">Roboto-Light</item>
        <item name="android:textSize">@dimen/content_title_textsize</item>
    </style>

    <style name="CardContainer">
        <item name="android:minHeight">96dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="CardDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/content_divider_height</item>
        <item name="android:layout_marginBottom">@dimen/content_divider_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/content_divider_margin_vertical</item>
        <item name="android:layout_marginLeft">@dimen/content_divider_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/content_divider_margin_horizontal</item>
        <item name="android:background">@color/content_view_card_divider</item>
    </style>

    <style name="ProfilePic">
        <item name="border_color">@color/profile_pic_border</item>
        <item name="border_width">@dimen/profile_pic_border_dimen</item>
        <item name="shadow">true</item>
    </style>

    <style name="ProfileLabelText">
        <item name="android:paddingLeft">@dimen/profile_stats_label_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/profile_stats_label_padding_horizontal</item>
        <item name="android:textSize">@dimen/profile_stats_label_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProfileStatContainer">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="ProfileStatContainer.Oriented">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ProfileStatRow">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProfileStatRow.Oriented">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ProfileStatTitle">
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/profile_stats_title_text_size</item>
    </style>

    <style name="ProfileStatTitle.Oriented">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProfileStatNum">
        <item name="android:padding">0dp</item>
        <item name="typeface">Roboto-Light</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/profile_stats_num_text_size</item>
    </style>

    <style name="ProfileStatNum.Oriented">
        <item name="android:gravity">end</item>
    </style>

    <style name="ProfileStatSwitcher" />

    <style name="ProfileStatSwitcher.Oriented">
        <item name="android:gravity">end</item>
    </style>
</resources>
