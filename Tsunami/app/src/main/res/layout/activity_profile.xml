<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tonyjhuang.tsunami.ui.customviews.scrollview.ObservableScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/cover"
                android:background="#3000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_alignBottom="@+id/cover"
                android:background="@drawable/shadow_up" />

            <com.tonyjhuang.tsunami.ui.customviews.CircularImageView
                android:id="@+id/profile_pic"
                android:layout_width="@dimen/profile_pic_dimen"
                android:layout_height="@dimen/profile_pic_dimen"
                android:layout_alignBottom="@+id/cover"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-24dp"
                android:src="@drawable/kevin"
                app:border_color="@color/profile_pic_border"
                app:border_width="@dimen/profile_pic_border_dimen"
                app:shadow="true" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cover"
                android:orientation="vertical">

                <com.tonyjhuang.tsunami.ui.customviews.TypefaceTextView
                    android:id="@+id/my_stats_label"
                    style="@style/ProfileLabelText"
                    android:text="@string/profile_label_stats" />

                <com.tonyjhuang.tsunami.ui.customviews.TypefaceTextView
                    android:id="@+id/my_waves_label"
                    style="@style/ProfileLabelText"
                    android:text="@string/profile_label_waves" />

            </LinearLayout>

        </RelativeLayout>
    </com.tonyjhuang.tsunami.ui.customviews.scrollview.ObservableScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/AppTheme.Toolbar" />

</FrameLayout>