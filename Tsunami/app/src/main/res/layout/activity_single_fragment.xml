<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:fitsSystemWindows="true"
    android:padding="0dp">

    <com.tonyjhuang.tsunami.ui.customviews.FitsSystemWindowsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:fitsSystemWindows="true"
        android:padding="0dp" />

    <ViewStub
        android:id="@+id/toolbar_stub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:inflatedId="@+id/toolbar"
        android:layout="@layout/stub_toolbar" />
</FrameLayout>