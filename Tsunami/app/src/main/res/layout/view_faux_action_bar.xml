<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tsunami="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@drawable/ab_protector"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.tonyjhuang.tsunami.ui.customviews.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/app_name_actionbar"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        tsunami:typeface="Oswald-Bold" />

</LinearLayout>